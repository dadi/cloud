{>"partials/header"/}

{<head}
  <style type="text/css">
  header {
    background: url(/assets/network/dadi-network_host-colour.svg) no-repeat 95% 20px;
    background-size: auto 480px;
    min-height: auto;
    min-height: calc(100vh - 230px);
  }
  .token-partners {
    position: absolute;
    bottom: 0; left: 0; right: 0;
  }
  @media (min-width: 800px) {
     header {
      padding-bottom: 160px;
    }
  }
  @media (max-width: 800px) {
    header {
      background-size: auto 248px;
      background-position: 180% 10%;
    }
    .token-partners {
      position: relative;
    }
  }
  nav.subnav a:hover,
  nav.subnav a.active {
    color: #000;
  } 
  nav.subnav .active:after, nav.subnav a:hover:after {
    color: #000;
    background: #000;
  } 
  nav.subnav a:after {
    background: linear-gradient(-90deg, rgba(0,0,0,0) 0%, #000 100%);
  } 
  </style>
{/head}

