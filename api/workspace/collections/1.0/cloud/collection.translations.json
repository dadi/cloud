{
  "fields": {
    "value": {
      "type": "String",
      "required": true,
      "label": "Value",
      "publish": {
        "section": "Details",
        "placement": "main",
        "multiline": true,
        "display": {
          "edit": true,
          "list": true
        },
        "heightType": "content",
        "rows": 3
      }
    },
    "key": {
      "type": "String",
      "required": true,
      "label": "Key",
      "publish": {
        "section": "Details",
        "placement": "sidebar",
        "display": {
          "edit": true,
          "list": true
        }
      }
    }
  },
  "settings": {
    "displayName": "Translations",
    "cache": false,
    "count": 40,
    "sort": "name",
    "sortOrder": 1,
    "storeRevisions": false,
    "compose": true,
    "hooks": {
      "beforeCreate": [
        {
          "hook": "slugify",
          "options": {
            "from": "key",
            "to": "key"
          }
        }
      ],
      "beforeUpdate": [
        {
          "hook": "slugify",
          "options": {
            "from": "key",
            "to": "key"
          }
        }
      ]
    }
  }
}